@charset "UTF-8";

/*************************[포털]프로필***************************/
/****1. 포털 프로필 이미지****/
/*프로필 이미지박스를 감싸는 컨테이너*/
.imageContainer{
	position: relative;
	display: flex;
	justify-content: center;
}

/*프로필 이미지를 감싸는 박스*/
.imagebox{
	width: 100px;
	height: 100px;
	border-radius: 50%;
	overflow: hidden;
	background-color: #4d7cff;
	position: absolute;
	bottom: 15px;
}

/****2. 포털 프로파일 하단 텍스트****/
/*프로필 하단 텍스트를 감싸는 컨테이너*/
.profileContainer{
	display: flex;
	width: 100%;
	justify-content: space-between;
	align-items: center;
}

/*프로필 하단 텍스트의 5가지 아이템 박스*/
.profileBox{
	display: inline-block flex;
	width: 15%;
	text-align: center;
	justify-content: center;
}

.mainMyInfo{
	display: flex;
	justify-content: space-evenly;
	align-items: center;
}
.mainMyInfo div{
	display: inline-block;
}


/*************************포틀릿************************************/

.potletModalContainer{
  display: flex;
  justify-content: center;
}

.potletModalLayout{
  display: grid;
  border: 1px solid black;
  grid-template-columns: repeat(3, 80px);
  grid-template-rows: repeat(3, 80px);
}

.item{
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  border: 1px solid grey;
}

.item0{
  grid-column: span 2;
}

.potletModalCheck label{
	display: block;
	text-align: left;
}

