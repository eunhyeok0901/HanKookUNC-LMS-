@font-face {
    font-family: 'NanumGothic';
    src: url('/resources/fonts/NanumGothic.woff') format('truetype');
}

body, h1, h2, h3, h4, h5, h6, p, span{
	font-family: 'NanumGothic' !important; 
}

.custom-s{
	color: var(--custom-s);
}

.custom-p{
	color: var(--custom-p);
}

.custom-m{
	color: var(--custom-m);
}

.custom-btn-s{
	background-color: var(--custom-s) !important;
	color: #FFFFFF !important;	
}

.custom-btn-p{
	background-color: var(--custom-p) !important;
	color: #FFFFFF !important;	
}

.custom-btn-m{
	background-color: var(--custom-m) !important;
	color: #FFFFFF !important;	
}

.custom-theader{
	background-color: #E9ECEF !important;
}

.custom-table1 table, .custom-table1 thead {
   display:block;
   width:100%;
}

.custom-table1 table thead tr {
   display:table;
    table-layout:fixed;
    width:100%;
}

.custom-table1 table thead tr {
   text-align: center;
}

.custom-table1 tbody { 
   display: block;
   overflow-y: scroll;
}

.custom-table1 tbody tr {
   display: table;
    table-layout: fixed;
    width:100%;
}

.custom-table1 tr td {
   text-align: center;
}

